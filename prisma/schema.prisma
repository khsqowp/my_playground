datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

// ==================== 인증 ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  name          String
  phone         String?   // 연락처
  birthDate     String?   // 생년월일 (YYYY-MM-DD 형식 문자열로 저장)
  status        UserStatus @default(PENDING) // 기본값은 승인 대기
  role          Role      @default(USER)
  permissions   Json?     // 상세 권한 { dashboard: { view: boolean, use: boolean }, ... }
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  posts         Post[]
  notes         Note[]
  memos         Memo[]
  quizSets      QuizSet[]
  links         ExternalLink[]
  activityLogs  ActivityLog[]
  webhookConfigs WebhookConfig[]
  incomingWebhooks IncomingWebhook[]
  aiConfigs     AiConfig[]
  aiPrompts     AiPrompt[]
  shareLinks    ShareLink[]
  portfolios    Portfolio[]
  archiveFiles  ArchiveFile[]
  codeReviewConfigs CodeReviewConfig[]
}

enum UserStatus {
  PENDING
  APPROVED
  REJECTED
}

enum Role {
  OWNER
  ADMIN
  USER
  GUEST
}

// ==================== 블로그 ====================

model Post {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  content     String      @db.Text
  excerpt     String?     @db.Text
  coverImage  String?
  published   Boolean     @default(false)
  visibility  Visibility  @default(PRIVATE)

  categoryId  String?
  category    Category?   @relation(fields: [categoryId], references: [id])
  tags        TagOnPost[]
  seriesId    String?
  series      Series?     @relation(fields: [seriesId], references: [id])
  seriesOrder Int?

  authorId    String
  author      User        @relation(fields: [authorId], references: [id])

  viewCount   Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([visibility, published])
  @@index([categoryId])
}

model Category {
  id    String  @id @default(cuid())
  name  String  @unique
  slug  String  @unique
  color String?

  posts Post[]
  notes Note[]
}

model Tag {
  id    String      @id @default(cuid())
  name  String      @unique
  posts TagOnPost[]
  notes TagOnNote[]
}

model TagOnPost {
  postId String
  tagId  String
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([postId, tagId])
}

model Series {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  posts       Post[]
  createdAt   DateTime @default(now())
}

enum Visibility {
  PUBLIC
  PRIVATE
  SHARED
}

// ==================== 학습 아카이브 ====================

model Note {
  id          String     @id @default(cuid())
  title       String
  content     String     @db.Text
  visibility  Visibility @default(PRIVATE)

  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id])
  tags        TagOnNote[]

  authorId    String
  author      User       @relation(fields: [authorId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model TagOnNote {
  noteId String
  tagId  String
  note   Note @relation(fields: [noteId], references: [id], onDelete: Cascade)
  tag    Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([noteId, tagId])
}

model QuizSet {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  visibility  Visibility @default(PRIVATE)

  questions   QuizQuestion[]

  authorId    String
  author      User       @relation(fields: [authorId], references: [id])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model QuizQuestion {
  id          String   @id @default(cuid())
  question    String   @db.Text
  answer      String   @db.Text
  hint        String?  @db.Text
  order       Int

  quizSetId   String
  quizSet     QuizSet  @relation(fields: [quizSetId], references: [id], onDelete: Cascade)
}

// ==================== 데이터 관리 ====================

model Memo {
  id          String   @id @default(cuid())
  content     String   @db.Text
  categoryTag String?
  pinned      Boolean  @default(false)

  authorId    String
  author      User     @relation(fields: [authorId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId, createdAt])
}

model DataCollection {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  schema      Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  records     DataRecord[]
}

model DataRecord {
  id           String         @id @default(cuid())
  data         Json
  collectionId String
  collection   DataCollection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([collectionId])
}

// ==================== 자동화 ====================

model WebhookConfig {
  id        String          @id @default(cuid())
  name      String
  platform  WebhookPlatform
  url       String
  secret    String?
  enabled   Boolean         @default(true)

  userId    String
  user      User            @relation(fields: [userId], references: [id])

  logs      WebhookLog[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

enum WebhookPlatform {
  DISCORD
  SLACK
  CUSTOM
}

model WebhookLog {
  id          String   @id @default(cuid())
  direction   String
  payload     Json
  status      String
  response    String?  @db.Text

  webhookId   String?
  webhook     WebhookConfig? @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  incomingWebhookId String?
  incomingWebhook   IncomingWebhook? @relation(fields: [incomingWebhookId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  
  @@index([webhookId])
  @@index([incomingWebhookId])
}

model AiConfig {
  id        String   @id @default(cuid())
  provider  String
  apiKey    String
  model     String
  isDefault Boolean  @default(false)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model IncomingWebhook {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  enabled   Boolean  @default(true)

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  logs      WebhookLog[]
  codeReviewConfigs CodeReviewConfig[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model AiPrompt {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  tags      String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

// ==================== 외부 링크 ====================

model ExternalLink {
  id          String   @id @default(cuid())
  title       String
  url         String
  icon        String?
  order       Int      @default(0)

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  createdAt   DateTime @default(now())
}

// ==================== 공유 링크 ====================

model ShareLink {
  id          String    @id @default(cuid())
  token       String    @unique @default(cuid())

  targetType  String
  targetId    String

  expiresAt   DateTime?
  maxAccess   Int?
  accessCount Int       @default(0)
  password    String?
  active      Boolean   @default(true)

  createdBy   String
  creator     User      @relation(fields: [createdBy], references: [id])

  createdAt   DateTime  @default(now())

  @@index([token])
  @@index([targetType, targetId])
}

// ==================== 활동 로그 ====================

model ActivityLog {
  id        String   @id @default(cuid())
  action    String
  target    String
  targetId  String?

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

// ==================== 시스템 설정 ====================

model SystemSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String @db.Text
}

// ==================== 포트폴리오 ====================

model Portfolio {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?     @db.Text
  content     String?     @db.Text
  coverImage  String?
  images      Json?       // [{url: string, caption?: string}]
  links       Json?       // [{title: string, url: string, icon?: string}]
  techStack   String?     // comma-separated
  published   Boolean     @default(false)
  visibility  Visibility  @default(PRIVATE)
  sortOrder   Int         @default(0)

  authorId    String
  author      User        @relation(fields: [authorId], references: [id])

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([slug])
  @@index([visibility, published])
}

// ==================== 프로젝트 및 회의 관리 ====================

model Project {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sessions    MeetingSession[]
  activityLogs ProjectActivityLog[]
  settings    ProjectSetting[]
  webhooks    IncomingWebhook[]
}

model MeetingSession {
  id          String   @id @default(cuid())
  title       String
  date        DateTime @default(now())
  description String?  @db.Text
  
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  attachments ProjectAttachment[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([projectId])
}

model ProjectActivityLog {
  id          String   @id @default(cuid())
  platform    String   // GITHUB, NOTION, etc.
  action      String   // COMMIT, PAGE_UPDATE, etc.
  content     String   @db.Text
  rawPayload  Json?
  eventTime   DateTime @default(now())
  externalId  String?  // 고유 식별자 (커밋 해시, 블록 ID 등)

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())

  @@unique([projectId, platform, externalId])
  @@index([projectId, eventTime])
}

model ProjectAttachment {
  id          String   @id @default(cuid())
  fileName    String
  filePath    String
  fileType    String   // STT, DOCUMENT, etc.
  fileSize    Int?
  
  sessionId   String?
  session     MeetingSession? @relation(fields: [sessionId], references: [id], onDelete: SetNull)

  createdAt   DateTime @default(now())
}

model ProjectSetting {
  id          String   @id @default(cuid())
  key         String   // SK_ROOKIES_FINAL_PJT_DISCORD_WEBHOOK_URL 등
  value       String   @db.Text
  isSecret    Boolean  @default(true)

  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, key])
}

// ==================== 파일 아카이브 ====================

enum AiAnalysisStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
  SKIPPED
}

model ArchiveFile {
  id          String            @id @default(cuid())
  fileName    String
  storageName String
  filePath    String
  fileType    String
  fileSize    Int
  extension   String
  folder      String            @default("미분류")

  aiSummary   String?  @db.Text
  aiTags      String?
  aiStatus    AiAnalysisStatus  @default(PENDING)

  zipTree     Json?

  authorId    String
  author      User   @relation(fields: [authorId], references: [id])
  chunks      FileChunk[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([authorId])
  @@index([authorId, folder])
}

model FileChunk {
  id        String   @id @default(cuid())
  content   String   @db.Text
  embedding Unsupported("vector(3072)")?
  
  fileId    String
  file      ArchiveFile @relation(fields: [fileId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())

  @@index([fileId])
}

// ==================== 코드 리뷰 자동화 ====================

model CodeReviewConfig {
  id                String   @id @default(cuid())
  name              String
  incomingWebhookId String
  incomingWebhook   IncomingWebhook @relation(fields: [incomingWebhookId], references: [id], onDelete: Cascade)
  discordWebhookUrl String
  githubRepo        String?  // "owner/repo" — GitHub API 동기화용
  enabled           Boolean  @default(true)
  lastReviewAt      DateTime?

  userId  String
  user    User @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviewLogs CodeReviewLog[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([incomingWebhookId])
}

model CodeReviewLog {
  id            String   @id @default(cuid())
  configId      String
  config        CodeReviewConfig @relation(fields: [configId], references: [id], onDelete: Cascade)
  webhookLogId  String?           // 웹훅 수신 기반일 때만 채워짐
  commitSha     String            // 중복 방지 기준
  commitMessage String?  @db.Text
  commitAuthor  String?
  reviewText    String?  @db.Text
  createdAt     DateTime @default(now())

  @@unique([configId, commitSha])
  @@index([configId])
}
